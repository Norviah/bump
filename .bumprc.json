{
  "provider": {
    "type": "json",
    "path": "package.json"
  },
  "tasks": {
    "pre": [
      {
        "name": "ensure source code is formatted",
        "command": "./node_modules/prettier/bin-prettier.js --config .prettierrc.json --list-different ./src"
      },
      {
        "name": "building project",
        "command": "pnpm run build:src"
      }
    ],
    "post": [
      {
        "name": "pushing to github",
        "command": "git push --follow-tags"
      },
      {
        "name": "publishing to npm",
        "command": "pnpm publish",
        "noSpinner": true
      }
    ]
  },
  "types": [
    {
      "type": "feat",
      "name": "Features"
    },
    {
      "type": "fix",
      "name": "Bug Fixes"
    },
    {
      "type": "revert",
      "name": "Reverted"
    },
    {
      "type": "refactor",
      "name": "Refactor"
    },
    {
      "type": "build",
      "name": "Build System"
    },
    {
      "type": "init",
      "name": "Init"
    },
    {
      "type": "remove",
      "name": "Removed Features"
    },
    {
      "type": "chore",
      "hidden": true
    },
    {
      "type": "docs",
      "hidden": true
    }
  ],
  "prompt": true,
  "unreleasedHeader": "Unreleased",
  "breakingHeader": "âš  Breaking Changes",
  "includeBody": true,
  "includeNonConventionalCommits": true,
  "tag": "v{{after}}",
  "releaseSubject": "chore(release): {{tag}}",
  "changelogSubject": "docs(changelog): {{tag}}"
}